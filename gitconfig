[include]
  path = ~/.gitconfig.local
[core]
  editor = /usr/bin/vim
  whitespace = trailing-space,space-before-tab
  excludesfile = ~/.gitignore
  autocrlf = input
  ignorecase = false
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = green 
  changed = blue
  untracked = cyan
[push]
  default = simple
[diff]
  renames = copies
  mnemonicprefix = true
